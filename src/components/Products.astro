---
import CardProduct from './CardProduct.astro';

const fakeProducts = await fetch(
   'https://raw.githubusercontent.com/devchallenges-io/web-project-ideas/main/front-end-projects/data/simple-coffee-listing-data.json'
)
   .then((res) => res.json())
   .catch((error) => console.log(error));
---

<section
   class="grid xl:grid-cols-3 lg:grid-cols-2 xl:gap-x-10 xl:gap-y-16 gap-y-14 lg:gap-x-8 px-10 pb-20"
>
   {fakeProducts.map((product) => <CardProduct product={product} />)}
</section>
