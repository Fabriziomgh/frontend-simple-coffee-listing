---
import Header from '../components/Header.astro';
import Products from '../components/Products.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Page Coffee">
   <div style="background-image: url('bg-cafe.jpg');" class="bg-image -z-20">
   </div>
   <main
      class="xl:max-w-6xl lg:max-w-3xl max-w-md bg-[#1B1D1F] mx-auto mt-40 mb-40 xl:px-20 px-8 rounded-xl"
   >
      <Header />
      <Products />
   </main>
</Layout>

<style>
   .bg-image {
      width: 100%;
      height: 600px;
      background-size: 100% 300px;
      background-position: top;
      background-repeat: no-repeat;
      background-attachment: fixed;
      position: absolute;
      top: 0;
      left: 0;
   }
</style>
